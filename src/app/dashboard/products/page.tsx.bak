                            <label className="block text-sm font-bold text-slate-700 mb-2">Cover Color</label>
                            <div className="grid grid-cols-6 gap-2">
                                {[
                                    { bg: 'bg-slate-100', text: 'text-slate-700', label: 'Slate' },
